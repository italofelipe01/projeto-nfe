# ========================================
# CONFIGURAÇÕES DO PROJETO
# ========================================

# --- Configurações do Flask ---
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=sua_chave_secreta_aqui_gere_uma_aleatoria

# --- Configurações do RPA ---
# Modo de execução: development (headful) ou production (headless)
RPA_MODE=development

# Timeout padrão para operações do RPA (em segundos)
RPA_TIMEOUT=30

# Timeout estendido para uploads (em segundos)
RPA_UPLOAD_TIMEOUT=60

# --- Credenciais do Portal ISS.net ---
# IMPORTANTE: Mantenha este arquivo fora do controle de versão (.gitignore)

# Usuário 1 (Exemplo: BRASIL INCORPORACAO ???)
ISSNET_USER_1=seu_usuario_aqui
ISSNET_PASS_1=sua_senha_aqui
ISSNET_INSCRICAO_1=1234567
ISSNET_CNPJ_1=12345678912341


# Usuário 2 (Exemplo: BRASIL INCORPORACAO ???)
ISSNET_USER_2=seu_usuario_aqui
ISSNET_PASS_2=sua_senha_aqui
ISSNET_INSCRICAO_2=7654321
ISSNET_CNPJ_2=12345678912341

# URL do portal
ISSNET_URL=https://www.issnetonline.com.br/goiania/online/login/login.aspx

# --- Configurações de Logging ---
LOG_LEVEL=DEBUG
LOG_TO_FILE=True
LOG_DIR=rpa_logs/execution_logs

# --- Configurações de Screenshot ---
SCREENSHOT_ON_ERROR=True
SCREENSHOT_ON_SUCCESS=True
SCREENSHOT_DIR=rpa_logs/screenshots

# --- Configurações de Retry (Tentativas) ---
# Número máximo de tentativas em caso de falha
MAX_RETRIES=3

# Tempo de espera entre tentativas (em segundos)
RETRY_DELAY=5
